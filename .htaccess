RewriteEngine On
RewriteBase /

# Skip rewriting if the file or directory exists
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Skip rewriting for specific paths
RewriteCond %{REQUEST_URI} ^/(auth|api|login\.php|logout\.php|public|init\.php) [NC]
RewriteRule ^ - [L]

# For all other requests, serve index.php (SPA)
RewriteRule ^(.*)$ /index.php [L]

