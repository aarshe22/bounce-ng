{
    "name": "bounce-ng/email-bounce-monitor",
    "description": "Email bounce monitoring and processing system",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-imap": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "league/oauth2-google": "^4.0",
        "league/oauth2-client": "^2.7",
        "thenetworg/oauth2-azure": "^2.1",
        "phpmailer/phpmailer": "^6.9",
        "monolog/monolog": "^3.0",
        "webklex/php-imap": "^6.0",
        "zbateson/mail-mime-parser": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "BounceNG\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@setup"
        ],
        "post-update-cmd": [
            "@setup"
        ],
        "setup": [
            "php scripts/setup.php"
        ]
    }
}

